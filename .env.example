# ============================================
# Mail Server Backend - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mail_server
DB_USERNAME=mail_server
DB_PASSWORD=your_secure_password_here

# PostgreSQL JDBC URL (auto-constructed from above, or set directly)
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/mail_server

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-secret-key-must-be-at-least-256-bits-long-for-hs256-algorithm-please-change-this-in-production-use-a-strong-random-string
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ============================================
# MAIL SERVER CONFIGURATION
# ============================================
# Your domain (e.g., lssgoo.com)
MAIL_SERVER_DOMAIN=lssgoo.com

# SMTP Configuration (for sending emails)
MAIL_SERVER_HOST=localhost
MAIL_SERVER_PORT=587
# Leave empty if using per-user authentication
MAIL_SERVER_USERNAME=
MAIL_SERVER_PASSWORD=
MAIL_SERVER_FROM=noreply@lssgoo.com

# IMAP Configuration (for receiving emails)
MAIL_SERVER_IMAP_HOST=localhost
MAIL_SERVER_IMAP_PORT=993
MAIL_SERVER_IMAP_SSL=true

# Server IP (for DNS records)
MAIL_SERVER_IP=your_server_ip_here

# Scripts path (relative to application root)
MAIL_SCRIPTS_PATH=./scripts

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Server port
SERVER_PORT=8080

# Application name
SPRING_APPLICATION_NAME=mail-server-backend

# Spring profile (dev/prod)
SPRING_PROFILES_ACTIVE=dev

# Enable/disable Swagger UI
SWAGGER_ENABLED=true

# ============================================
# DOCKER MAILSERVER CONFIGURATION
# ============================================
# Docker container name
DOCKER_MAILSERVER_CONTAINER=mailserver

# Docker network name
DOCKER_MAILSERVER_NETWORK=mail-network

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Set to 'prod' for production
# SPRING_PROFILES_ACTIVE=prod

# Enable/disable Swagger UI in production
# SWAGGER_ENABLED=false
