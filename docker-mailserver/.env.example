# ============================================
# Docker-Mailserver Environment Variables
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control
# 
# Usage: docker-compose --env-file .env up -d

# ============================================
# DOMAIN CONFIGURATION
# ============================================
# Your mail server domain (e.g., lssgoo.com)
MAIL_DOMAIN=lssgoo.com

# Mail server hostname (usually 'mail')
MAIL_HOSTNAME=mail

# Postmaster email address
POSTMASTER_ADDRESS=postmaster@lssgoo.com

# ============================================
# DOCKER CONFIGURATION
# ============================================
# Container name
CONTAINER_NAME=mailserver

# Docker network name
NETWORK_NAME=mail-network

# ============================================
# MAIL SERVER FEATURES
# ============================================
# Enable SpamAssassin (1=enabled, 0=disabled)
ENABLE_SPAMASSASSIN=1

# Enable ClamAV antivirus (1=enabled, 0=disabled)
ENABLE_CLAMAV=1

# Enable Fail2Ban (1=enabled, 0=disabled)
ENABLE_FAIL2BAN=1

# Enable Postgrey (greylisting) (1=enabled, 0=disabled)
ENABLE_POSTGREY=1

# Enable Amavis (1=enabled, 0=disabled)
ENABLE_AMAVIS=0

# Enable Fetchmail (1=enabled, 0=disabled)
ENABLE_FETCHMAIL=0

# Enable Managesieve (1=enabled, 0=disabled)
ENABLE_MANAGESIEVE=0

# Enable LDAP (1=enabled, 0=disabled)
ENABLE_LDAP=0

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Use ONE_DIR mode (all data in one directory) (1=enabled, 0=disabled)
ONE_DIR=1

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Permit Docker network (host/network/none)
PERMIT_DOCKER=host

# Enable TLS (1=enabled, 0=disabled)
ENABLE_TLS=1

# TLS certificate type (letsencrypt, self-signed, custom, maildir)
TLS_TYPE=letsencrypt

# ============================================
# LOGGING & DEBUG
# ============================================
# Debug mode (0=disabled, 1=enabled)
DMS_DEBUG=0

# Log level (trace, debug, info, warn, error)
LOG_LEVEL=info

# ============================================
# NETWORK CONFIGURATION
# ============================================
# Override hostname
OVERRIDE_HOSTNAME=

# ============================================
# SPAM FILTERING
# ============================================
# SpamAssassin score threshold (default: 5.0)
SPAMASSASSIN_SPAM_TO_INBOX=1

# ============================================
# QUOTA CONFIGURATION
# ============================================
# Enable quota (1=enabled, 0=disabled)
ENABLE_QUOTAS=0

# ============================================
# ADDITIONAL CONFIGURATION
# ============================================
# Additional environment variables can be added here
# For more options, see: https://docker-mailserver.github.io/docker-mailserver/latest/config/environment-variables/

# ============================================
# PRODUCTION SETTINGS
# ============================================
# For production, set:
# DMS_DEBUG=0
# ENABLE_SPAMASSASSIN=1
# ENABLE_CLAMAV=1
# ENABLE_FAIL2BAN=1
# TLS_TYPE=letsencrypt
